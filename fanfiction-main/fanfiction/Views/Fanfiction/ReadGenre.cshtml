@{
    Layout = "~/Views/Shared/_LayoutFanfiction.cshtml";
}

@model fanfiction.Models.Fanfiction.GenreModel
<div style="width: 80%; text-align: center; vertical-align: center">
    @if (Model.IsSignedIn)
    {
        @Html.ActionLink(
            string.Empty,
            "AddGenre",
            "Fanfiction",
            new {genreId = Model.genre.GenreId},
            new {@class = "bi bi-pen-fill"})
    }
    <h4 class="lang" key="Genre"></h4>
    <h4 class="lang mt-2" key="Category-Name"></h4>
    <div class="border-dashed" style="width: 100%; margin: 0 auto">
        @if (Model.lang == "ru")
        {

            <h3 style="white-space: pre; padding: 0; margin: 0 auto">@Model.genre.RuName</h3>

        }
        else
        {

            <h3 style="white-space: pre; padding: 0; margin: 0 auto">@Model.genre.EnName</h3>

        }
    </div>
    <h4 class="lang mt-2" key="Description"></h4>
    <div class="border-dashed" style="text-align: left; width: 100%;  margin: 0 auto">
        @if (Model.lang == "ru")
        {
            <p style="white-space: pre-wrap">@Model.genre.RuDescription</p>
        }
        else
        {
            <p style="white-space: pre-wrap">@Model.genre.EnDescription</p>
        }

    </div>
</div>
    


